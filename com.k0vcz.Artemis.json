{
    "id" : "com.k0vcz.Artemis",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
    ],
    "command" : "com.k0vcz.Artemis",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/vala/bin",
        "prepend-ld-library-path" : "/usr/lib/sdk/vala/lib",
        "env" : {
            "FLATPAK_ID": "com.k0vcz.Artemis"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "hamlib",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-static",
                "--without-cxx-binding",
                "--disable-winradio",
                "--without-indi",
                "--without-readline"
            ],
            "cleanup": [
                "/bin/ampctl",
                "/bin/ampctld",
                "/bin/rigctl",
                "/bin/rigctlcom",
                "/bin/rigctld",
                "/bin/rigctlsync",
                "/bin/rigctltcp",
                "/bin/rigfreqwalk",
                "/bin/rigmem",
                "/bin/rigsmtr",
                "/bin/rigswr",
                "/bin/rigtestlibusb",
                "/bin/rigtestmcast",
                "/bin/rigtestmcastrx",
                "/bin/rotctl",
                "/bin/rotctld"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Hamlib/Hamlib/releases/download/4.6.5/hamlib-4.6.5.tar.gz",
                    "sha256": "90d6f1dba59417c00f8f4545131c7efd31930cd0e178598980a8210425e3852e"
                }
            ]
        },
        {
            "name": "protobuf",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_POSITION_INDEPENDENT_CODE=ON",
                "-Dprotobuf_ABSL_PROVIDER=package",
                "-Dprotobuf_BUILD_SHARED_LIBS=ON",
                "-Dprotobuf_BUILD_TESTS=OFF"
            ],
            "cleanup": [
                "/bin/protoc*",
                "/lib/libprotoc*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "tag": "v32.1",
		    "commit":"7fcfd66022455635fa29af92987cdc0967efd4f3"
                }
            ]
        },
        {
            "name": "protobuf-c",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protobuf-c/protobuf-c.git",
                    "tag": "v1.5.2",
		    "commit":"4719fdd7760624388c2c5b9d6759eb6a47490626"
                }
            ]
        },
        {
            "name": "shumate",
            "buildsystem": "meson",
            "sources": [
                {
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/libshumate.git",
                "tag": "1.5.0",
		"commit": "570222efec093a1e9df928f62113e0756aa302a0"
                }
            ]
        },
	{
      		"name": "blueprint-compiler",
      		"buildsystem": "meson",
      		"cleanup": [
          		"*"
      		],
      		"sources": [
          	{
              		"type": "git",
              		"url": "https://gitlab.gnome.org/GNOME/blueprint-compiler.git",
              		"tag": "v0.18.0",
			"commit": "07c9c9df9cd1b6b4454ecba21ee58211e9144a4b"
          	}
      		]
  	},
        {
            "name" : "artemis",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts":[
                "-Dbuildtype=release"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/jaybaird/artemis.git",
		    "tag"  : "v1.0.0",
		    "commit": "e4ba03d1bc018b5734bf56c76a0d262ea04a152e"
                }
            ]
        }
    ]
}
