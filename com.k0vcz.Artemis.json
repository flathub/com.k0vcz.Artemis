{
    "id": "com.k0vcz.Artemis",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "com.k0vcz.Artemis",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "hamlib",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-static",
                "--without-cxx-binding",
                "--disable-winradio",
                "--without-indi",
                "--without-readline"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Hamlib/Hamlib/releases/download/4.6.5/hamlib-4.6.5.tar.gz",
                    "sha256": "90d6f1dba59417c00f8f4545131c7efd31930cd0e178598980a8210425e3852e"
                }
            ]
        },
        {
            "name": "protobuf",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_POSITION_INDEPENDENT_CODE=ON",
                "-Dprotobuf_ABSL_PROVIDER=package",
                "-Dprotobuf_BUILD_SHARED_LIBS=ON",
                "-Dprotobuf_BUILD_TESTS=OFF"
            ],
            "cleanup": [
                "/bin/protoc*",
                "/lib/libprotoc*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "tag": "v32.1",
                    "commit": "7fcfd66022455635fa29af92987cdc0967efd4f3"
                }
            ]
        },
        {
            "name": "protobuf-c",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protobuf-c/protobuf-c.git",
                    "tag": "v1.5.2",
                    "commit": "4719fdd7760624388c2c5b9d6759eb6a47490626"
                }
            ]
        },
        {
            "name": "shumate",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate.git",
                    "tag": "1.5.0",
                    "commit": "570222efec093a1e9df928f62113e0756aa302a0"
                }
            ]
        },
        {
            "name": "artemis",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/jaybaird/artemis.git",
                    "tag": "v1.0.0",
                    "commit": "cc1f74257988c3a7bdc3a04b7a642e72af83cf99"
                }
            ]
        }
    ]
}
